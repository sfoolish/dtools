<domain type='kvm'>
  <name>REPLACE_NAME</name>
  <memory unit='MiB'>REPLACE_MEM</memory>
  <currentMemory unit='MiB'>REPLACE_MEM</currentMemory>
  <vcpu placement='static'>REPLACE_CPU</vcpu>
  <cpu mode='host-passthrough'/>
  <os>
    <type arch='x86_64'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/><apic/><pae/>
  </features>
  <clock offset="utc"/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='REPLACE_IMAGE_A'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='REPLACE_IMAGE_B'/>
      <target dev='vdb' bus='virtio'/>
    </disk>
     <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='REPLACE_IMAGE_C'/>
      <target dev='vdc' bus='virtio'/>
    </disk>
    <interface type='network'>
      <source network='REPLACE_NET_MGMT_NET'/>
      <model type='virtio'/>
    </interface>
    <interface type='network'>
      <source network='default'/>
      <model type='virtio'/>
    </interface>
    <interface type='network'>
        <source network='REPLACE_NET_INSTALL'/>
        <model type='virtio'/>
    </interface>
    <input type='tablet' bus='usb'/>
    <graphics type='vnc' port='-1' autoport='yes' listen='0.0.0.0'/>
    <console type='pty'/>
    <video>
      <model type='cirrus'/>
    </video>
  </devices>
</domain>
